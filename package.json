{
  "name": "@hyperb1iss/q",
  "version": "0.1.0",
  "description": "The shell's quiet companion - elegant CLI agent for quick queries",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "q": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "build:compile": "bun build src/cli.ts --compile --outfile q",
    "check": "biome check --write .",
    "lint": "biome lint --write .",
    "format": "biome format --write . && prettier --write \"**/*.{yaml,yml,md}\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist q",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperb1iss/q.git"
  },
  "author": "Stefanie Jane <stef@hyperbliss.tech>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hyperb1iss/q/issues"
  },
  "homepage": "https://github.com/hyperb1iss/q#readme",
  "keywords": [
    "cli",
    "terminal",
    "claude",
    "ai",
    "agent",
    "tui",
    "shell"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.0.76",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "react": "^19.2.3",
    "marked": "^17.0.1",
    "shiki": "^3.20.0",
    "cosmiconfig": "^9.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/react": "^19.2.7",
    "@types/yargs": "^17.0.35",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  }
}
